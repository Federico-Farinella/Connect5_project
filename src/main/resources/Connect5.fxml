   <children>
      <HBox alignment="CENTER" prefHeight="102.0" prefWidth="320.0" style="-fx-background-color: BLACK;" AnchorPane.rightAnchor="0.0">
         <children>
            <Label prefHeight="40.0" prefWidth="262.0" text="CONNECT 5" textFill="WHITE">
               <font>
                  <Font name="Stalin One" size="25.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <ImageView fitHeight="199.0" fitWidth="320.0" layoutY="101.0">
         <image>
            <Image url="@images/myLogo.jpg" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" layoutY="300.0" prefHeight="270.0" prefWidth="320.0" spacing="50.0" style="-fx-background-color: rgb(179,252,252);">
         <children>
            <Button fx:id="btnLog" mnemonicParsing="false" onAction="#login" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: BLACK; -fx-background-radius: 20;" text="Login" textFill="WHITE">
